{
  "name": "shipengine_cli",
  "version": "1.0.0",
  "description": "cli for gRpc ship engine simulator",
  "main": "cli.js",
  "scripts": {
    "lint": "eslint . --fix"
  },
  "author": "Naruby",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.4",
    "async": "^3.2.0",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "google-protobuf": "^3.0.0",
    "grpc": "^1.11.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base/legacy"
    ],
    "plugins": [],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "rules": {
      "class-methods-use-this": "warn",
      "max-len": [
        "warn",
        {
          "code": 120,
          "comments": 150
        }
      ],
      "indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        0
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-mixed-spaces-and-tabs": [
        "warn",
        "smart-tabs"
      ],
      "no-console": [
        "off"
      ]
    }
  }
}